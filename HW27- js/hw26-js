<script>
    // Generate random friends count on page load
    let friendsCount = Math.floor(Math.random() * 100);

    // Display friends count on page load
    let friendsCountDisplay = document.createElement("p");
    friendsCountDisplay.textContent = `Friends: ${friendsCount}`;
    document.body.appendChild(friendsCountDisplay);

    // Create "Add to friends" button

    let addToFriendsButton = document.createElement("button");
    addToFriendsButton.textContent = "Add to friends";
    document.body.appendChild(addToFriendsButton);

    // Add click event to "Add to friends" button

      addToFriendsButton.addEventListener("click", function() {
      friendsCount++;
      friendsCountDisplay.textContent = `Friends: ${friendsCount}`;
      addToFriendsButton.disabled = true;
      addToFriendsButton.textContent = "Pending approval";
      });

    // Create "Write a message" button
    let writeMessageButton = document.createElement("button");
    writeMessageButton.textContent = "Write a message";
    document.body.appendChild(writeMessageButton);

      // Create "Suggest job" button
      let suggestJobButton = document.createElement("button");
      suggestJobButton.textContent = "Suggest job";
      document.body.appendChild(suggestJobButton);

</script>

